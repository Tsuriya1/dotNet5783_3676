<Window x:Class="PL.Product.ProductItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
        Title="ProductItemWindow" Height="450" Width="800">
    <Grid Background="#FFECFBF9">
        <TextBlock HorizontalAlignment="Stretch" Margin="0,54,0,0" Text="{Binding ProductItem}" VerticalAlignment="Top" FontSize="18" FontFamily="Calibri Light" Background="#FFECFBF9" TextAlignment="Center" FontWeight="Bold"/>
        <Button Content="Add to cart" Click="AddToCart" HorizontalAlignment="Center" Margin="0,381,0,0" VerticalAlignment="Top" Width="236"/>
    </Grid>
</Window>
